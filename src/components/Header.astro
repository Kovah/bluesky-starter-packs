---
import { getCollection } from "astro:content"

const packCount = (await getCollection('packs')).length
const tagCount = (await getCollection('tags')).length
---
<header>
  <a href="/">
    <h1><span class="text-gradient">Bluesky</span><br> <span class="sp">Starter Packs</span></h1>
  </a>
  <div class="subline">{packCount} Starter Packs in {tagCount} Tags</div>
</header>

<style>
  header {
    margin: 2rem auto;
  }
  a {
    display: block;
    color: rgb(var(--black));
    text-decoration: none;
    transition: color 300ms;
    margin-bottom: 2rem;
  }
  a .sp {
    background-image: var(--accent-gradient-reverse);
    background-position: 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    transition: background-position var(--transition);
  }
  a:hover .sp, a:focus .sp {
    background-position: 0;
    transition: background-position var(--transition);
  }
  .subline {
    font-size: 80%;
    text-align: center;
    color: rgb(var(--gray));
    letter-spacing: 1px;
  }
  @media (min-width: 800px) {
    br {
      display: none;
    }
  }
</style>
